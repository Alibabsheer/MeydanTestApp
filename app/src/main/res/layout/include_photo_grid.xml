<?xml version="1.0" encoding="utf-8"?>
<!-- جذر فعلي (ليس <merge>) حتى يعمل ViewBinding مع includePhotoGrid -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- شريط علوي بسيط لاختيار القالب -->
    <LinearLayout
        android:id="@+id/toolbarPhotoGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickTemplate"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اختيار القالب"
            app:icon="@drawable/ic_grid"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />
    </LinearLayout>

    <!-- شبكة خانات الصور -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPhotoSlots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:overScrollMode="never"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp" />

</LinearLayout>
