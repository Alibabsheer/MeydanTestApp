<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="locale"
    android:orientation="vertical"
    android:paddingTop="@dimen/report_item_spacing"
    android:paddingBottom="@dimen/report_item_spacing"
    android:paddingStart="@dimen/report_item_spacing_half"
    android:paddingEnd="@dimen/report_item_spacing_half">

    <ImageView
        android:id="@+id/sitePageImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/report_content_desc_photo"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_image_placeholder" />

    <TextView
        android:id="@+id/sitePageCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/report_site_page_caption_margin_top"
        android:breakStrategy="balanced"
        android:lineSpacingExtra="@dimen/report_body_line_spacing_extra"
        android:textColor="?android:textColorPrimary"
        android:textDirection="firstStrong"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        android:visibility="gone" />

</LinearLayout>
