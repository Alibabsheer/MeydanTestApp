<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context=".AccountSettingsActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:contentDescription="رجوع"
        android:focusable="true"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="?attr/iconTint" />

    <TextView
        android:id="@+id/screenTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/main_font"
        android:text="إعدادات الحساب"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backButton" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screenTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/orgNameLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="?attr/iconTint"
                app:endIconContentDescription="تعديل اسم المؤسسة">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/orgNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:hint="اسم المؤسسة" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/businessTypeLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="?attr/iconTint"
                app:endIconContentDescription="تعديل نوع النشاط">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/businessTypeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="نوع النشاط"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/joinCodeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="كود الانضمام إلى المساحة"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/joinCodeLayout"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="?attr/boxBackgroundColor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/joinCodeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:text="XYZ123456" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/joinCodeButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/generateCodeButton"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="إعادة توليد الكود" />

                <ImageButton
                    android:id="@+id/copyJoinCodeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="نسخ الكود"
                    android:padding="8dp"
                    android:src="@drawable/ic_copy"
                    app:tint="?attr/iconTint" />

                <ImageButton
                    android:id="@+id/editJoinCodeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:contentDescription="تعديل الكود"
                    android:padding="8dp"
                    android:src="@drawable/ic_edit"
                    app:tint="?attr/iconTint" />
            </LinearLayout>

            <TextView
                android:id="@+id/manageUsersHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="16dp"
                android:text="إدارة المستخدمين"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/manageUsersButton"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="عرض وإدارة المستخدمين" />

            <TextView
                android:id="@+id/logoHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center_horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="16dp"
                android:text="شعار المؤسسة"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logoPreview"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/box_background"
                android:scaleType="fitCenter"
                android:src="@drawable/default_logo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadLogoButton"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="رفع / تغيير الشعار" />

            <TextView
                android:id="@+id/logoHintText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:paddingTop="4dp"
                android:text="يرجى رفع صورة الشعار بصيغة PNG، بدقة عالية، بالأبعاد التالية:\nالعرض: حوالي 2000 بكسل\nالارتفاع: بين 400 و500 بكسل"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="12sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveChangesButton"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="حفظ التغييرات" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteAccountButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:text="🗑️ حذف حساب المؤسسة"
                app:backgroundTint="@color/material_red_700"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>