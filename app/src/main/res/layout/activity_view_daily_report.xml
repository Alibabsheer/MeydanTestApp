<?xml version="1.0" encoding="utf-8"?>
<!-- شاشة عرض صفحات PDF:
     - ZoomLayout يأخذ مساحة الشاشة المتبقية (0dp + layout_weight=1) لضمان قياس ثابت (EXACTLY).
     - RecyclerView داخل ZoomLayout مسؤول عن التمرير العمودي لصفحات PDF.
     - أزرار التحكم في الأسفل: مشاركة الـPDF ثم الرجوع.
     - الحفاظ على RTL وتنسيق عربي واضح. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="anyRtl"
    android:textAlignment="viewStart"
    android:background="@color/inputBackground">

    <!-- حاوية المحتوى الرأسية -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layoutDirection="rtl"
        android:textDirection="anyRtl"
        android:textAlignment="viewStart">

        <!-- منطقة العرض المكبّرة -->
        <com.otaliastudios.zoom.ZoomLayout
            android:id="@+id/zoomContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">

            <!-- قائمة صفحات الـPDF (كصور) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pdfPagesRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:overScrollMode="never"
                android:scrollbars="vertical" />

        </com.otaliastudios.zoom.ZoomLayout>

        <!-- زر مشاركة PDF: يُفعّل برمجيًا بعد انتهاء التحميل/التوليد -->
        <Button
            android:id="@+id/sharePdfButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:text="مشاركة التقرير PDF"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_red_light_theme"
            android:layoutDirection="rtl"
            android:textDirection="anyRtl"
            android:textAlignment="center"
            android:enabled="false"
            android:contentDescription="مشاركة ملف التقرير بصيغة PDF" />

        <!-- زر الرجوع -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="رجوع إلى الصفحة السابقة"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_red_light_theme"
            android:layoutDirection="rtl"
            android:textDirection="anyRtl"
            android:textAlignment="center"
            android:contentDescription="الرجوع إلى الشاشة السابقة" />
    </LinearLayout>

    <!-- مؤشر التحميل في المنتصف (يُعرض/يُخفى برمجيًا) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
