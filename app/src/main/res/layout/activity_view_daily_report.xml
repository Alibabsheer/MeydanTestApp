<?xml version="1.0" encoding="utf-8"?>
<!-- شاشة عرض صفحات PDF:
     - ZoomLayout يأخذ مساحة الشاشة المتبقية (0dp + layout_weight=1) لضمان قياس ثابت (EXACTLY).
     - RecyclerView داخل ZoomLayout مسؤول عن التمرير العمودي لصفحات PDF.
     - أزرار التحكم في الأسفل: مشاركة الـPDF ثم الرجوع.
     - الحفاظ على RTL وتنسيق عربي واضح. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="anyRtl"
    android:textAlignment="viewStart"
    android:background="@color/inputBackground">

    <!-- حاوية المحتوى الرأسية -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layoutDirection="rtl"
        android:textDirection="anyRtl"
        android:textAlignment="viewStart">

        <!-- منطقة العرض المكبّرة -->
        <TextView
            android:id="@+id/projectLocationLabel"
            style="@style/TextAppearance.Heading.H1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_project_location"
            android:visibility="gone" />

        <TextView
            android:id="@+id/projectLocationValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/reportSectionsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_daily_report_table"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layoutDirection="rtl"
            android:textDirection="anyRtl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    style="@style/TextAppearance.Heading.H2"
                    android:text="@string/daily_report_section_activities"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/activitiesValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:breakStrategy="balanced"
                    android:ellipsize="none"
                    android:gravity="start"
                    android:hyphenationFrequency="normal"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textIsSelectable="false"
                    android:maxLines="10"
                    android:scrollHorizontally="false"
                    android:textAlignment="viewStart"
                    android:lineSpacingMultiplier="1.1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    style="@style/TextAppearance.Heading.H2"
                    android:text="@string/daily_report_section_equipment"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/machinesValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:breakStrategy="balanced"
                    android:ellipsize="none"
                    android:gravity="start"
                    android:hyphenationFrequency="normal"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textIsSelectable="false"
                    android:maxLines="10"
                    android:scrollHorizontally="false"
                    android:textAlignment="viewStart"
                    android:lineSpacingMultiplier="1.1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    style="@style/TextAppearance.Heading.H2"
                    android:text="@string/daily_report_section_obstacles"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/obstaclesValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:breakStrategy="balanced"
                    android:ellipsize="none"
                    android:gravity="start"
                    android:hyphenationFrequency="normal"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textIsSelectable="false"
                    android:maxLines="10"
                    android:scrollHorizontally="false"
                    android:textAlignment="viewStart"
                    android:lineSpacingMultiplier="1.1" />
            </LinearLayout>
        </LinearLayout>

        <com.otaliastudios.zoom.ZoomLayout
            android:id="@+id/zoomContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1">

            <!-- قائمة صفحات الـPDF (كصور) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/pdfPagesRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:overScrollMode="never"
                android:scrollbars="vertical" />

        </com.otaliastudios.zoom.ZoomLayout>

        <!-- زر مشاركة PDF: يُفعّل برمجيًا بعد انتهاء التحميل/التوليد -->
        <Button
            android:id="@+id/sharePdfButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:text="@string/action_share_daily_report_pdf"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_red_light_theme"
            android:layoutDirection="rtl"
            android:textDirection="anyRtl"
            android:textAlignment="center"
            android:enabled="false"
            android:contentDescription="@string/content_desc_share_pdf" />

        <!-- زر الرجوع -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/action_back_to_previous"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_red_light_theme"
            android:layoutDirection="rtl"
            android:textDirection="anyRtl"
            android:textAlignment="center"
            android:contentDescription="@string/content_desc_back" />
    </LinearLayout>

    <!-- مؤشر التحميل في المنتصف (يُعرض/يُخفى برمجيًا) -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
