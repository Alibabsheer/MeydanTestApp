<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/inputBackground"
    android:layoutDirection="locale">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/report_screen_padding_horizontal"
        android:paddingEnd="@dimen/report_screen_padding_horizontal"
        android:paddingTop="@dimen/report_screen_padding_vertical"
        android:paddingBottom="@dimen/report_screen_padding_vertical"
        android:layoutDirection="locale">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reportList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/report_list_bottom_padding"
            android:layoutDirection="locale"
            android:textDirection="firstStrong"
            android:overScrollMode="never" />

        <Button
            android:id="@+id/sharePdfButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/report_action_button_spacing"
            android:text="@string/report_action_share_pdf"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_red_light_theme"
            android:layoutDirection="locale"
            android:textAlignment="center" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/report_action_button_spacing"
            android:text="@string/report_action_back"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/brand_red_light_theme"
            android:layoutDirection="locale"
            android:textAlignment="center" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
