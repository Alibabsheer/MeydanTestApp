<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layoutDirection="rtl"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="?attr/boxBackgroundColor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/itemNumberLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم البند:"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/itemNumberText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1."
            android:textColor="@color/text_and_icons_light"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/itemNumberLabel"
            app:layout_constraintStart_toEndOf="@+id/itemNumberLabel"
            app:layout_constraintBottom_toBottomOf="@+id/itemNumberLabel" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="أعمال الحفر والردم لتسوية الموقع"
            android:textColor="@color/text_and_icons_light"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/itemNumberLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/unitLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الوحدة:"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/unitText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="متر مكعب"
            android:textColor="@color/text_and_icons_light"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/unitLabel"
            app:layout_constraintStart_toEndOf="@+id/unitLabel"
            app:layout_constraintBottom_toBottomOf="@+id/unitLabel" />

        <TextView
            android:id="@+id/quantityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الكمية:"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/unitText"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/quantityEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:minWidth="80dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:imeOptions="actionNext"
            tools:text="1500.00"
            android:textColor="@color/text_and_icons_light"
            android:textSize="14sp"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/quantityLabel"
            app:layout_constraintStart_toEndOf="@+id/quantityLabel"
            app:layout_constraintEnd_toStartOf="@+id/unitPriceEditText"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="@+id/quantityLabel" />


        <TextView
            android:id="@+id/unitPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سعر الوحدة:"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/quantityEditText"
            app:layout_constraintStart_toEndOf="@+id/quantityEditText"
            app:layout_constraintBottom_toBottomOf="@+id/quantityEditText"
            app:layout_constraintHorizontal_bias="0.0" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/unitPriceEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:minWidth="100dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:imeOptions="actionDone"
            tools:text="150.00"
            android:textColor="@color/text_and_icons_light"
            android:textSize="14sp"
            android:background="@drawable/edit_text_background"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/unitPriceLabel"
            app:layout_constraintStart_toEndOf="@+id/unitPriceLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1.2"
            app:layout_constraintBottom_toBottomOf="@+id/unitPriceLabel" />

        <TextView
            android:id="@+id/totalValueLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="القيمة الإجمالية:"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/quantityEditText"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/totalValueText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="225,000.00"
            android:textColor="?attr/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/totalValueLabel"
            app:layout_constraintStart_toEndOf="@+id/totalValueLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/totalValueLabel"
            app:layout_constraintHorizontal_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>