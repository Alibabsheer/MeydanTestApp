<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:padding="16dp"
    tools:context=".ProjectSettingsActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="رجوع"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="?attr/iconTint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تفاصيل المشروع"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/main_font"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintTop_toTopOf="@id/backButton"
        app:layout_constraintBottom_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            android:paddingBottom="24dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/projectNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="اسم المشروع"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="?attr/iconTint"
                android:layout_marginBottom="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/projectNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:enabled="false"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ownerNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="مالك المشروع"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                android:layout_marginBottom="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ownerNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:enabled="false"
                    android:focusable="false"
                    android:text="—" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contractorNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="مقاول المشروع"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                android:layout_marginBottom="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contractorNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:enabled="false"
                    android:focusable="false"
                    android:text="—" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/consultantNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="الاستشاري"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                android:layout_marginBottom="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/consultantNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:enabled="false"
                    android:focusable="false"
                    android:text="—" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/projectLocationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="موقع المشروع"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="?attr/iconTint"
                android:layout_marginBottom="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/projectLocationEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:enabled="false"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clearLocationButton"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="مسح الموقع"
                android:textSize="14sp"
                android:fontFamily="@font/main_font"
                android:visibility="gone"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/startDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تاريخ بدء المشروع"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom"
                app:endIconContentDescription="اختيار التاريخ"
                app:endIconTint="?attr/iconTint"
                android:layout_marginBottom="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/startDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/endDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="تاريخ انتهاء المشروع"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom"
                app:endIconContentDescription="اختيار التاريخ"
                app:endIconTint="?attr/iconTint"
                android:layout_marginBottom="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/endDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/contractValueLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="قيمة عقد المشروع"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                app:endIconMode="custom"
                app:endIconDrawable="@drawable/ic_edit"
                app:endIconTint="?attr/iconTint"
                android:layout_marginBottom="12dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/contractValueEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:focusable="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/projectTypeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="نوع العمل"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                app:boxBackgroundColor="?attr/boxBackgroundColor"
                android:layout_marginBottom="24dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/projectTypeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="false"
                    android:enabled="false" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/viewContractTableButton"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="عرض جدول الكميات"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/main_font"
                app:cornerRadius="16dp"
                android:layout_marginBottom="24dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/saveChangesButton"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حفظ التعديلات"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/main_font"
                app:cornerRadius="16dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteProjectButton"
                style="@style/Widget.App.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حذف المشروع"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/main_font"
                app:cornerRadius="16dp"
                app:backgroundTint="@android:color/holo_red_dark"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>