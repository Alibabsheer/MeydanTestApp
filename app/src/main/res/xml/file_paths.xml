<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- مشاركة ملفات PDF المخزنة في cacheDir/reports/ -->
    <cache-path
        name="shared_reports"
        path="reports/" />

    <!-- صور مؤقتة داخل cacheDir/images/ (متوافقة مع ImageEditorActivity و ImageUtils) -->
    <cache-path
        name="images_cache"
        path="images/" />

    <!-- اختيارية: صور داخل Pictures الخاصة بالتطبيق في التخزين الخارجي الخاص -->
    <external-files-path
        name="pictures_app"
        path="Pictures/" />
</paths>
