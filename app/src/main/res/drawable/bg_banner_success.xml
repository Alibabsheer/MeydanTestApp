<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- خلفية خضراء للنجاح (Green 800) -->
    <solid android:color="@color/background_dark" />

    <!-- حواف ناعمة للراية -->
    <corners android:radius="14dp" />

    <!-- حدّ فاتح شفاف لتمييز الحافة فوق الخلفيات الداكنة -->
    <stroke
        android:width="1dp"
        android:color="#1FFFFFFF" />

    <!-- حشوة داخلية مناسبة للنص والأيقونة -->
    <padding
        android:left="16dp"
        android:top="12dp"
        android:right="16dp"
        android:bottom="12dp" />
</shape>
