<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- لون الخلفية متوافق مع الثيم (فاتح/داكن) -->
    <solid android:color="?attr/colorSurface" />

    <!-- حواف دائرية ناعمة -->
    <corners android:radius="16dp" />

    <!-- حدّ خفيف لإبراز البطاقة فوق طبقة التمويه -->
    <stroke
        android:width="1dp"
        android:color="#14000000" />

    <!-- حشوة داخلية لترك مسافة حول المؤشر والنص -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

    <!-- حجم أدنى حتى لا تنكمش البطاقة في المساحات الضيقة -->
    <size
        android:minWidth="240dp"
        android:minHeight="140dp" />
</shape>
